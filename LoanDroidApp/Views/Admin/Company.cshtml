<img id="temp_image" style="display:none;"/>
<div class="modal fade" id="editCompanyModal" tabindex="-1" role="dialog" aria-labelledby="editCompanyModal" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@SharedLocalizer["Dialog"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <input class="form-control" type="hidden" placeholder="id" value="" id="edit_company_id">
                <div class="form-group row">
                    <label for="example-search-input" class="col-2 col-form-label">@SharedLocalizer["NAME_"] <span class="text-danger">*</span></label>
                    <div class="col-10">
                        <input type="text" class="form-control" id="edit_company_name" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="example-search-input" class="col-2 col-form-label">@SharedLocalizer["PURPOSE_"]</label>
                    <div class="col-10">
                        <input type="text" class="form-control" id="edit_company_purpose" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="example-search-input" class="col-2 col-form-label">@SharedLocalizer["DIRECTION_"]</label>
                    <div class="col-10">
                        <input type="text" class="form-control" id="edit_company_direction" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="example-search-input" class="col-2 col-form-label">@SharedLocalizer["PHONENUMBER_"]</label>
                    <div class="col-10">
                        <input type="text" class="form-control" id="edit_company_phone" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="example-search-input" class="col-2 col-form-label">@SharedLocalizer["URL_"]</label>
                    <div class="col-10">
                        <input type="text" class="form-control" id="edit_company_url" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal" id="company_model_close_btn">@SharedLocalizer["Close"]</button>
                <button type="button" onclick="submitCompanyEditForm();" class="btn btn-primary font-weight-bold">@SharedLocalizer["Savingchanges"]</button>
            </div>
        </div>
    </div>
</div>
